<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/layout_self_user" />

        <com.lrony.mread.ui.widget.MineRowView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/self_line_height"
            android:background="@drawable/bg_list_item"
            android:clickable="true"
            app:mine_icon="@drawable/ic_vector_settings"
            app:mine_title="设置" />

        <com.lrony.mread.ui.widget.MineRowView
            android:id="@+id/self_app_night_mode"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:background="@drawable/bg_list_item"
            android:clickable="true"
            app:mine_arrow_visibility="false"
            app:mine_icon="@drawable/ic_vector_brightness"
            app:mine_title="夜间模式">

            <include layout="@layout/compat_switch_night_mode" />
        </com.lrony.mread.ui.widget.MineRowView>

        <com.lrony.mread.ui.widget.MineRowView
            android:id="@+id/self_app_share"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/self_line_height"
            android:background="@drawable/bg_list_item"
            android:clickable="true"
            app:mine_icon="@drawable/ic_vector_share"
            app:mine_title="分享" />

        <com.lrony.mread.ui.widget.MineRowView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/self_line_height"
            android:background="@drawable/bg_list_item"
            android:clickable="true"
            app:mine_icon="@drawable/ic_vector_info"
            app:mine_title="关于" />
    </LinearLayout>
</ScrollView>